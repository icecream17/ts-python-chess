{
   "extends": "standard-with-typescript",
   "env": {
      "browser": true,
      "es2021": true,
      "node": true
   },
   "ignorePatterns": [
      "*.config.js"
   ],
   "parser": "@typescript-eslint/parser",
   "parserOptions": {
      "ecmaVersion": 12,
      "project": "./tsconfig.json",
      "sourceType": "module"
   },
   "plugins": [
      "@typescript-eslint"
   ],
   "root": true,
   "rules": {
      "indent": "off",
      "quotes": "off",
      "@typescript-eslint/indent": [
         "warn",
         3
      ],
      "@typescript-eslint/method-signature-style": "off",
      "@typescript-eslint/restrict-template-expressions": [
         "error",
         {
            "allowNumber": true,
            "allowBoolean": true,
            "allowAny": true,
            "allowNullish": true
         }
      ],
      "@typescript-eslint/quotes": [
         "error",
         "double",
         {
            "avoidEscape": true
         }
      ],

      "comma-dangle": [
         "error",
         "only-multiline"
      ],
      "object-property-newline": "off"
   }
}
